@import "./custom/custom";

#main-content h1:first-of-type {
  border-bottom: $border $border-color;
  padding-bottom: 1.5rem;
  margin-bottom: 1.5rem;
  a {
    height: inherit;
  }
}

#main-content .task-list {
  ul.task-list {
    padding-left: 1rem;
  }
  li {
    display: inherit;
  }
}

/* width */
::-webkit-scrollbar {
  width: 0.5rem;
}

/* Track */
::-webkit-scrollbar-track {
  border-radius: 50px;
}

/* Handle */
::-webkit-scrollbar-thumb {
  background: $feedback-color;
  border-radius: 50px; 
}

/* Handle on hover */
::-webkit-scrollbar-thumb:hover {
  background: darken($feedback-color, 5%); 
  border-radius: 50px;
}



.post-image {
  height: 300px;
  overflow: hidden;
}

.post-pagination {
  text-align: right;
  padding-top: 1rem;
}

/* Style The Toggle Button */

#mode-container {
  width: 100%;
  border-bottom: $border $border-color;
  color: $grey-dk-000;
  font-size: .9em;
  @include mq(md) {
    @include mq(xxl) {
      width: $nav-width;
    }
    display: block;
    font-size: .9em;
  }
}

.mode-flex {
  @include container;
  display: flex;
  align-items: center;
  flex-direction: row;
  padding-top: .5rem;
  padding-bottom: 1rem;
  justify-content: space-between;
}

.toggle-switch {
  position: relative;
  width: 2em;
  height: 1em;
}

.toggle-label {
  position: absolute;
  width: 100%;
  height: 1em;
  border-radius: 1em;
  cursor: pointer;
}

#toggle-input {
  position: absolute;
}
#toggle-input::before {
  content: "";
}

.slider {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: .50em;
  transition: 0.3s;
}

.slider::before {
  content: "";
  position: absolute;
  top: .1em;
  left: 1em;
  width: .75em;
  height: .75em;
  border-radius: .60em;

  transition: 0.3s;


}

/* End Toggle Button */

.site-nav {
	padding-top:0;
}

.nav-category {
	margin-top:0;
	text-align: initial;
}

#nav-container {
  margin-bottom: 0.5rem;
}

/* Style The Dropdown Button */

.collection-nav {
  width: 100%;
  @include mq(xxl) {
    width: $nav-width;
  }
}

.collection-arrow {
  position: absolute;
  width: 8rem;
  padding-top: 1rem;
  padding-right: 1.2rem;
  padding-bottom: 0.96rem;
  padding-left: 0.5rem;
  right: 0rem;
  text-align: right;
  color: $body-background-color;
  z-index: 1;
  background-color: $link-color;
  cursor: pointer;
  svg {
    width: 1rem;
    transform: rotate(-90deg);
  }
}

.collection-arrow:hover {
  background-color: $hover-color;
}

.collection-arrow-up svg{
  transform: rotate(90deg);
}

/* Making it responsive for desktop */

@include mq(md) {
  .collection-arrow-up:hover + .dropbtn, .collection-arrow-up + .dropbtn:hover {
    padding-left: 3rem;
  }
  .collection-arrow {
    width: 2rem;
    svg {
      transform: rotate(0);
    }
  }
  .collection-arrow-up {
  left:0;
    svg {
      transform: rotate(180deg);

    }
  }
}

.dropbtn, .droplink {
  border: none;
  cursor: pointer;
  font-size: 14px !important;
  letter-spacing: .05em;
  display: block;
  padding-top: 1rem;
  padding-bottom: 1rem;
}

.droplink {
  border-bottom: $border $border-color;
}

.dropbtn {
	background: $link-color;
	color: $body-background-color;
  position: relative;
}

.dropbtn:hover {
  background: $hover-color;
}

/* The container <div> - needed to position the dropdown content */
.dropdown {
  position: relative;
  font-size:  14px !important;
  padding-bottom:$gutter-spacing-sm;
  user-select: none;

}

/* Dropdown Content */
.dropdown-content {
  display: block;
  position: relative;
  background-color: $sidebar-color;
  min-width: 100%;
  z-index: 1;

}

/* Links inside the dropdown */
.dropdown-content a {
  text-decoration: none;
  display: block;
}

/* Change color of dropdown links on hover */
.dropdown-content a:hover, a.droplink:hover {
  background-color: $feedback-color;
}

.display-none {
  display: none;
}

/* Styling the Content TOC */

#content-nav-container {
  position: absolute;
  top: 7rem;
  right: -2rem;
  display: none;
  @include mq(xl) {
    display: block;
  }
}

#content-nav {
  position: fixed;
}

#content-nav {
  position: fixed;
  font-size: 12px;
  text-transform: uppercase;

}

#content-nav-container a {
  color: $grey-dk-000;
  text-decoration: none;
}

.toc-ul, .toc-ul li, .toc-ul > li > a, .toc-ul > li > ul  {
  padding-left: 0 !important;
}

.toc-ul li, {
  line-height: 1.5rem;
  margin: 0 !important;
  li {
    border-left: $border $border-color;
    a:hover, .toc-active {
      border-left: 0.2rem solid $link-color;  
    }
  }
}

.toc-ul li:before {
  content: "";
  display: none;
}

a.toc-link {
  padding-top: 0.4rem;
  padding-bottom: 0.4rem;
  padding-left: 1rem;
}



a.toc-link:hover, a.toc-active {
  color: $link-color !important;
  padding-left: 0.8rem;
}


 a.link-title {
  white-space: normal;
}

