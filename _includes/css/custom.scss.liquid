@import "./custom/custom";

/* Style The Toggle Button */

.mode-container {
  width: 100%;
  border-bottom: $border $border-color;
  color: $grey-dk-000;
  font-size: .9em;
  @include mq(lg) {
    width: $nav-width;
  }
}

.mode-flex {
  @include container
  display: flex;
  align-items: center;
  flex-direction: row;
  padding-top: .5rem;
  padding-bottom: 1rem;
  justify-content: space-between;
}

.toggle-switch {
  position: relative;
  width: 2em;
  height: 1em;
}

.toggle-label {
  position: absolute;
  width: 100%;
  height: 1em;
  border-radius: 1em;
  cursor: pointer;
}

#toggle-input {
  position: absolute;
}
#toggle-input::before {
  content: "";
}

.slider {
  position: absolute;
  width: 100%;
  height: 100%;
  border-radius: .50em;
  transition: 0.3s;
}

.slider::before {
  content: "";
  position: absolute;
  top: .1em;
  left: 1em;
  width: .75em;
  height: .75em;
  border-radius: .60em;

  transition: 0.3s;


}

.site-nav {
	padding-top:0;
}

.nav-category {
	margin-top:0;
	text-align: initial;
}

/* Style The Dropdown Button */
.dropbtn, .droplink {
  border: none;
  cursor: pointer;
  font-size: 18px !important;
  letter-spacing: .05em;
  border-bottom: 1px solid #eeebee;
}

.dropbtn {
	background: $link-color;
	color: white;
}

/* The container <div> - needed to position the dropdown content */
.dropdown {
  position: relative;
  font-size:  18px !important;
  padding-bottom:$gutter-spacing-sm;

}

/* Dropdown Content (Hidden by Default) */
.dropdown-content {
  display: none;
  position: absolute;
  background-color: #f9f9f9;
  min-width: 100%;
  box-shadow: 0px 8px 16px 0px rgba(50,50,50,0.1);
  z-index: 1;
}

/* Links inside the dropdown */
.dropdown-content a {
  text-decoration: none;
  display: block;
}

/* Change color of dropdown links on hover */
.dropdown-content a:hover {background-color: #f1f1f1}

/* Show the dropdown menu on hover */
.dropdown:hover .dropdown-content {
  display: block;
}

